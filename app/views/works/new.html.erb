<% provide(:title, "Create New Work") %>
<h1>Create New Work</h1>

<dev class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@work, html: { multipart: true }) do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :contents %>
        <%= f.text_area :contents %>

        <%= f.label :link %>
        <%= f.text_field :link %>
      </div>
      <%= f.submit "Post", class: "btn btn-primary" %>
      <span class="sendimage">
        <%= f.file_field :image %>
      </span>
    <% end %>
