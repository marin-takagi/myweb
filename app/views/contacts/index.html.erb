<% provide(:title, "Contacts index") %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>index</h1>
      <div class="container">
        <% if @contacts.any? %>
          <h3>Contacts (<%= @contacts.count %>)</h3>
            <ol class="contacts">
                <%= render @contacts %>
            </ol>
        <% end %>
      </div>
    </div>
  </div>
</div>
